<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollvw3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.google.pramodbs.collegehelper.RegisterActivity"
    android:background="@drawable/nitk_light_house">

    <TextView
        android:textSize="30dp"
        android:text="User Registration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/disp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Enter your Login ID"
        android:id="@+id/regemail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Enter Password !"
        android:textColorHint="#FFFFFF"
        android:id="@+id/regpassword"
        android:layout_below="@+id/regemail"
        android:layout_alignLeft="@+id/regemail"
        android:layout_alignStart="@+id/regemail"
        android:textColor="#FFFFFF"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Re-Enter Password !"
        android:id="@+id/regpasswordre"
        android:layout_below="@+id/regpassword"
        android:layout_alignLeft="@+id/regpassword"
        android:layout_alignStart="@+id/regpassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        />

    <Button
        android:text="Register"
        android:id="@+id/regbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/regpasswordre"
        android:layout_alignLeft="@+id/regpasswordre"
        android:layout_alignStart="@+id/regpasswordre"
        android:textColor="#FFFFFF"
        android:background="#808080"/>

    <TextView
        android:text="Already Registered ? Login here"
        android:id="@+id/regtxtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignBaseline="@+id/regbutton"
        android:layout_alignBottom="@+id/regbutton"
        android:textColor="#FFFFFF"/>

</LinearLayout>

</ScrollView>