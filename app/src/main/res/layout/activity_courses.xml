<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollvwcrs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#00FFFF">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.google.pramodbs.collegehelper.Attendance">

        <TextView
            android:textSize="30dp"
            android:text="Course Summary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/disp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:text="CORE COURSES"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:id="@+id/core"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/crs1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/crs2"
            android:layout_below="@+id/regemail"
            android:layout_alignLeft="@+id/regemail"
            android:layout_alignStart="@+id/regemail" />

        <TextView
            android:layout_width="match_parent"
            android:ems="10"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:id="@+id/crs3"
            android:layout_below="@+id/regpassword"
            android:layout_alignLeft="@+id/regpassword"
            android:layout_alignStart="@+id/regpassword" />

        <TextView
            android:layout_width="match_parent"
            android:ems="10"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:id="@+id/crs4"
            android:layout_below="@+id/regpassword"
            android:layout_alignLeft="@+id/regpassword"
            android:layout_alignStart="@+id/regpassword" />

        <TextView
            android:layout_width="match_parent"
            android:ems="10"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:id="@+id/crs5"
            android:layout_below="@+id/regpassword"
            android:layout_alignLeft="@+id/regpassword"
            android:layout_alignStart="@+id/regpassword" />

        <TextView
            android:layout_width="match_parent"
            android:ems="10"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:id="@+id/crs6"
            android:layout_below="@+id/regpassword"
            android:layout_alignLeft="@+id/regpassword"
            android:layout_alignStart="@+id/regpassword" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:text="ELECTIVE COURSES"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:id="@+id/elec"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:id="@+id/elec1"
            android:textSize="20dp"
            android:layout_below="@+id/regpassword"
            android:layout_alignLeft="@+id/regpassword"
            android:layout_alignStart="@+id/regpassword" />

        <TextView
            android:layout_width="match_parent"
            android:ems="10"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:id="@+id/elec2"
            android:layout_below="@+id/regpassword"
            android:layout_alignLeft="@+id/regpassword"
            android:layout_alignStart="@+id/regpassword" />

    </LinearLayout>

</ScrollView>
